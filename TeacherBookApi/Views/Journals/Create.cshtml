            </div>
            <div class="form-group">
                <label asp-for="IdGroup" class="control-label"></label>
                <select asp-for="IdGroup" class ="form-control" asp-items="ViewBag.IdGroup"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

