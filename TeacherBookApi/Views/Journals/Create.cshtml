@model TeacherBookApi.Models.Journal

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Journal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdStudent" class="control-label"></label>
                <select asp-for="IdStudent" class ="form-control" asp-items="ViewBag.IdStudent"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdSubject" class="control-label"></label>
                <select asp-for="IdSubject" class ="form-control" asp-items="ViewBag.IdSubject"></select>
            </div>
            <div class="form-group">
                <label asp-for="Evaluation" class="control-label"></label>
                <input asp-for="Evaluation" class="form-control" />
